<div class="row row-cols-5 g-2">
  <% for (let i = 1; i <= totalQuestions; i++) { %>
    <% 
      let btnClass = "btn btn-sm";
      if (currentQNum && i === currentQNum) {
        btnClass += " btn-warning"; // Câu hiện tại
      } else if (userAnswers && userAnswers[i] && userAnswers[i].length > 0) {
        btnClass += " btn-outline-info"; // Đã trả lời
      } else {
        btnClass += " btn-outline-secondary"; // Chưa trả lời
      }
      
      // Dùng cho trang kết quả
      if (results) {
        const result = results.find(r => r.qNum === i);
        if (result.isCorrect) {
          btnClass = "btn btn-sm btn-success"; // Đúng
        } else {
          btnClass = "btn btn-sm btn-danger"; // Sai
        }
      }
    %>
    
    <div class="col">
      <% if (results) { %>
        <a href="#q-<%= i %>" class="<%= btnClass %> w-100"><%= i %></a>
      <% } else { %>
        <button type="submit" name="jumpTo" value="<%= i %>" class="<%= btnClass %> w-100"><%= i %></button>
      <% } %>
    </div>
    
  <% } %>
</div>